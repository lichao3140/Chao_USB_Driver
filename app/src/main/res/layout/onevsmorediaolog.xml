<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/onevsmore_alert"
        android:layout_width="436px"
        android:layout_height="314px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/bg_alert"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="50dp">
            <!--第一-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- 工号显示-->
                <LinearLayout
                    android:layout_width="200px"
                    android:layout_height="60px"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_xm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="工号："
                        android:textColor="#fff"
                        android:textSize="25dp"/>
                    <TextView
                        android:id="@+id/onevsmore_userID"
                        android:layout_width="100px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="25dp"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

                <!-- 姓名显示-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="60px"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_xm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="姓名 ："
                        android:textColor="#fff"
                        android:textSize="25dp"/>

                    <TextView
                        android:id="@+id/onevsmore_userName"
                        android:layout_width="100px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="25dp"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

                <!-- 模板类型显示-->
                <LinearLayout
                    android:layout_width="200px"
                    android:layout_height="60px"
                    android:gravity="center_vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_xm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="类型："
                        android:textColor="#fff"
                        android:textSize="25dp"/>
                    <TextView
                        android:id="@+id/onevsmore_userType"
                        android:layout_width="100px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="25dp"
                        android:singleLine="true"
                        android:ellipsize="end"/>

                </LinearLayout>

            </LinearLayout>

            <!-- 模板图片显示-->
            <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="180px"
             android:layout_marginLeft="20dp">

              <ImageView
                 android:id="@+id/onevsmore_temper"
                 android:layout_width="105px"
                 android:layout_height="match_parent"
                 android:background="@drawable/boder"
                 android:padding="5px" />
               </LinearLayout>

        </LinearLayout>

        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/onevsmore_txicon"
                android:layout_width="240px"
                android:layout_height="98px"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="80dp"
                android:src="@mipmap/icon_tg"/>

        </LinearLayout-->

        </LinearLayout>



    </RelativeLayout>
    <ImageView
       android:id="@+id/onevsmore_txicon"
       android:layout_marginBottom="-15px"
       android:layout_centerHorizontal="true"
       android:layout_width="240px"
       android:layout_height="98px"
       android:layout_above="@id/onevsmore_alert"
       android:src="@mipmap/icon_tg" />

</RelativeLayout>
